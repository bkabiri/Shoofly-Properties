<!-- Preheader (hidden) -->
<div style="display:none;max-height:0;overflow:hidden;opacity:0;color:transparent;">
  Your Snoofly account email has been updated.
</div>

<table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="background:#f6f7fb;margin:0;padding:0;">
  <tr>
    <td align="center" style="padding:24px;">
      <!--[if mso]><table role="presentation" cellpadding="0" cellspacing="0" width="600"><tr><td><![endif]-->
      <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="max-width:600px;background:#ffffff;border-radius:16px;box-shadow:0 6px 24px rgba(20,20,20,.06);overflow:hidden;">
        <!-- Brand -->
        <tr>
          <td style="background:#ffffff;padding:20px 24px;border-bottom:1px solid #f0f1f5;">
            <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td align="left" style="font-family:Inter,Segoe UI,Arial,sans-serif;">
                  <a href="<%= root_url %>" style="text-decoration:none;display:inline-flex;align-items:center;">
                    <span style="display:inline-block;vertical-align:middle;margin-right:10px;">
                      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 16 16" fill="#ff4a5f" aria-hidden="true" style="display:block;">
                        <path d="M7.293 1.5a1 1 0 0 1 1.414 0L11 3.793V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v3.293l2.354 2.353a.5.5 0 0 1-.708.707L8 2.207 1.354 8.853a.5.5 0 1 1-.708-.707z"/>
                        <path d="m14 9.293-6-6-6 6V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5zm-6-.811c1.664-1.673 5.825 1.254 0 5.018-5.825-3.764-1.664-6.691 0-5.018"/>
                      </svg>
                    </span>
                    <span style="font-weight:800;font-size:20px;letter-spacing:.2px;color:#ff4a5f;">Snoofly</span>
                  </a>
                </td>
                <td align="right" style="font-family:Inter,Segoe UI,Arial,sans-serif;font-size:12px;color:#98a0ab;">
                  Email change notice
                </td>
              </tr>
            </table>
          </td>
        </tr>

        <!-- Hero -->
        <tr>
          <td style="background:linear-gradient(135deg,#ff4a5f 0%, #ff6f7f 100%);padding:32px 28px;color:#fff;">
            <div style="font-family:Inter,Segoe UI,Arial,sans-serif;">
              <div style="font-size:14px;opacity:.9;margin-bottom:6px;">Account update</div>
              <h1 style="margin:0 0 8px 0;font-size:26px;line-height:1.25;font-weight:800;">
                Hi <%= @email %>,
              </h1>
              <p style="margin:0;font-size:15px;line-height:1.6;opacity:.95;">
                We’re letting you know that your Snoofly email has changed.
              </p>
            </div>
          </td>
        </tr>

        <!-- Body -->
        <tr>
          <td style="padding:28px;">
            <div style="font-family:Inter,Segoe UI,Arial,sans-serif;color:#1f2330;">
              <% if @resource.try(:unconfirmed_email?) %>
                <p style="margin:0 0 10px 0;font-size:15px;line-height:1.7;color:#4b5563;">
                  Your account is being updated. The new email on file will be:
                  <strong style="color:#111827;"><%= @resource.unconfirmed_email %></strong>
                  (pending confirmation).
                </p>
              <% else %>
                <p style="margin:0 0 10px 0;font-size:15px;line-height:1.7;color:#4b5563;">
                  Your email has been successfully changed to
                  <strong style="color:#111827;"><%= @resource.email %></strong>.
                </p>
              <% end %>

              <!-- Tips box -->
              <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="margin-top:18px;background:#fafbff;border:1px solid #eef0f6;border-radius:12px;">
                <tr>
                  <td style="padding:14px 16px;font-family:Inter,Segoe UI,Arial,sans-serif;font-size:13px;line-height:1.6;color:#475569;">
                    Didn’t request this change?
                    <a href="mailto:support@snoofly.com" style="color:#ff4a5f;text-decoration:none;">Contact support</a>
                    immediately and we’ll help secure your account.
                  </td>
                </tr>
              </table>

              <!-- Dashboard link -->
              <p style="margin:18px 0 0 0;text-align:center;">
                <a href="<%= dashboard_url %>"
                   style="display:inline-block;padding:12px 18px;font-family:Inter,Segoe UI,Arial,sans-serif;font-size:14px;font-weight:700;color:#ffffff;background:#ff4a5f;border-radius:10px;text-decoration:none;">
                  Go to your dashboard
                </a>
              </p>
            </div>
          </td>
        </tr>

        <!-- Footer -->
        <tr>
          <td style="padding:22px 24px;border-top:1px solid #f0f1f5;">
            <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td style="font-family:Inter,Segoe UI,Arial,sans-serif;font-size:12px;color:#94a3b8;" align="left">
                  © <%= Time.zone.now.year %> Snoofly • All rights reserved
                </td>
                <td align="right" style="white-space:nowrap;">
                  <a href="#" style="font-family:Inter,Segoe UI,Arial,sans-serif;font-size:12px;color:#94a3b8;text-decoration:none;margin-left:12px;">Twitter</a>
                  <a href="#" style="font-family:Inter,Segoe UI,Arial,sans-serif;font-size:12px;color:#94a3b8;text-decoration:none;margin-left:12px;">Instagram</a>
                  <a href="#" style="font-family:Inter,Segoe UI,Arial,sans-serif;font-size:12px;color:#94a3b8;text-decoration:none;margin-left:12px;">Facebook</a>
                </td>
              </tr>
            </table>
          </td>
        </tr>

      </table>
      <!--[if mso]></td></tr></table><![endif]-->
      <div style="height:24px;line-height:24px;font-size:24px;">&nbsp;</div>
    </td>
  </tr>
</table>

<style>
@media only screen and (max-width: 600px) { .hide-mobile { display:none !important; } }
</style>