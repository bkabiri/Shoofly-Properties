<%# Detect seller area (any Seller::* controller) %>
<% seller_area = controller_path.start_with?("seller/") %>

<nav
  class="navbar navbar-expand-lg
         <%= seller_area ? 'navbar-light bg-white shadow-sm fixed-top snoofly-navbar--seller' :
                           'snoofly-navbar position-absolute top-0 start-0 w-100' %>"
  style="<%= seller_area ? '' : 'background: transparent; z-index: 1030;' %>">

  <div class="container">
    <!-- Brand -->
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center gap-2 #{seller_area ? 'text-dark' : 'text-white'} fs-4" do %>
      <!-- House Heart SVG -->
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30"
           fill="#ff4a5f" class="bi bi-house-heart-fill" viewBox="0 0 16 16">
        <path d="M7.293 1.5a1 1 0 0 1 1.414 0L11 3.793V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v3.293l2.354 2.353a.5.5 0 0 1-.708.707L8 2.207 1.354 8.853a.5.5 0 1 1-.708-.707z"/>
        <path d="m14 9.293-6-6-6 6V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5zm-6-.811c1.664-1.673 5.825 1.254 0 5.018-5.825-3.764-1.664-6.691 0-5.018"/>
      </svg>
      <%# Brand text: red on seller pages, white on hero %>
      <span class="fw-bold" style="<%= seller_area ? 'color:#ff4a5f' : '' %>"><%= seller_area ? 'Snoofly' : 'Snoofly' %></span>
    <% end %>

    <!-- Mobile toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain"
            aria-controls="navMain" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon <%= seller_area ? '' : 'navbar-toggler-icon--white' %>"></span>
    </button>

    <!-- Links -->
    <div class="collapse navbar-collapse" id="navMain">
      <% link_cls = seller_area ? 'nav-link text-dark fw-medium px-3' : 'nav-link text-white fw-medium px-3' %>

      <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-3 fs-5">
        <li class="nav-item">
          <%= link_to "Solutions", "#", class: link_cls %>
        </li>
        <li class="nav-item d-none d-lg-block">
          <span class="<%= seller_area ? 'mx-2 text-muted' : 'mx-2 text-white-50' %>">â€¢</span>
        </li>

        <% if user_signed_in? %>
          <!-- User dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 <%= seller_area ? 'text-dark' : 'text-white' %> px-3 fs-5"
               href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <!-- Person Icon -->
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                   viewBox="0 0 24 24" fill="none" stroke="currentColor"
                   stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                   class="feather feather-user">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
            </a>

            <ul class="dropdown-menu dropdown-menu-end shadow-sm"
                style="<%= seller_area ? '' : 'background-color: rgba(255,255,255,0.8); backdrop-filter: blur(6px);' %>"
                aria-labelledby="userDropdown">
              <li class="dropdown-header fw-semibold"><%= current_user.email %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Profile", "#", class: "dropdown-item" %></li>
              <li><%= link_to "My Dashboard", dashboard_path, class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete,
                            class: "dropdown-item text-danger d-flex align-items-center gap-2" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                       viewBox="0 0 24 24" fill="none" stroke="currentColor"
                       stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                       class="feather feather-log-out">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 17 21 12 16 7"></polyline>
                    <line x1="21" y1="12" x2="9" y2="12"></line>
                  </svg>
                  Sign out
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: link_cls %>
          </li>
          <li class="nav-item ms-lg-3">
            <%= link_to "Get started", new_user_registration_path,
                        class: "btn btn-cta px-3 fw-semibold fs-5",
                        style: "background:#ff4a5f; color:#fff;" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<%# Spacer only when fixed-top (seller pages) to avoid overlap with content %>
<% if seller_area %>
  <div style="height: 56px;"></div>
<% end %>