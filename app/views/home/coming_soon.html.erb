<!-- app/views/home/coming_soon.html.erb -->
<div class="coming-hero">
  <!-- Background image -->
  <%= image_tag "hero.png", class: "coming-hero__bg", alt: "Snoofly hero" %>
  <div class="coming-hero__overlay"></div>

  <!-- Top-centered Snoofly logo -->
  <div class="coming-hero__logo">
    <div class="brand-row">
      <%= link_to root_path, class: "navbar-brand d-flex align-items-center gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 16 16" fill="#ff4a5f" aria-hidden="true">
          <path d="M7.293 1.5a1 1 0 0 1 1.414 0L11 3.793V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v3.293l2.354 2.353a.5.5 0 0 1-.708.707L8 2.207 1.354 8.853a.5.5 0 1 1-.708-.707z"/>
          <path d="m14 9.293-6-6-6 6V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5zm-6-.811c1.664-1.673 5.825 1.254 0 5.018-5.825-3.764-1.664-6.691 0-5.018"/>
        </svg>
        <span class="fw-bold fs-4" style="color:#ff4a5f;">Snoofly</span>
      <% end %>
    </div>
  </div>

  <!-- Main content -->
  <div class="coming-hero__content">
    <span class="coming-pill">We’re almost ready</span>
    <h1 class="coming-title">Snoofly is launching soon</h1>
    <p class="coming-subtitle">
      A better way to find, manage, and love your next place. Be first in line when we open the doors.
    </p>

    <!-- Countdown -->
    <div id="countdown" class="cd">
      <div class="cd__tile">
        <div class="cd__num" data-key="days">00</div>
        <div class="cd__label">Days</div>
      </div>
      <div class="cd__tile">
        <div class="cd__num" data-key="hours">00</div>
        <div class="cd__label">Hours</div>
      </div>
      <div class="cd__tile">
        <div class="cd__num" data-key="minutes">00</div>
        <div class="cd__label">Minutes</div>
      </div>
      <div class="cd__tile">
        <div class="cd__num" data-key="seconds">00</div>
        <div class="cd__label">Seconds</div>
      </div>
    </div>
  </div>
</div>

<!-- Minimal footer -->
<div class="coming-footer">
  © <%= Time.current.year %> Snoofly — All rights reserved.
</div>

<style>
  :root{
    --glass-bg: rgba(255,255,255,0.12);
    --glass-brd: rgba(255,255,255,0.18);
    --fg: #fff;
    --fg-dim: rgba(255,255,255,0.7);
    --shadow: 0 10px 30px rgba(0,0,0,0.25);
  }

  .coming-hero{
    position:relative; min-height:100vh; color:var(--fg); overflow:hidden;
    display:flex; align-items:center; justify-content:center; text-align:center;
  }
  .coming-hero__bg{
    position:absolute; inset:0; width:100%; height:100%; object-fit:cover; filter:brightness(.55);
  }
  .coming-hero__overlay{
    position:absolute; inset:0;
    background:
      radial-gradient(60% 80% at 20% 20%, rgba(255,255,255,0.12), transparent 60%),
      radial-gradient(80% 80% at 80% 20%, rgba(0,123,255,0.22), transparent 60%),
      linear-gradient(180deg, rgba(0,0,0,0.15), rgba(0,0,0,0.35));
    pointer-events:none;
  }

  /* Top-centered logo */
  .coming-hero__logo{
    position:absolute; top:28px; left:50%; transform:translateX(-50%);
    z-index:2;
  }
  .coming-hero__logo .navbar-brand{
    background:var(--glass-bg); border:1px solid var(--glass-brd);
    border-radius:999px; padding:.5rem 1rem;
    backdrop-filter: blur(6px); box-shadow: var(--shadow);
    text-decoration:none;
  }
  .coming-hero__logo svg{ flex-shrink:0; }

  .coming-hero__content{
    position:relative; z-index:1; max-width:980px; padding:72px 20px 40px;
  }

  .coming-pill{
    display:inline-block; background:#fff; color:#111; font-weight:700;
    padding:.4rem .9rem; border-radius:999px; letter-spacing:.02em; margin-bottom:16px;
    box-shadow: var(--shadow);
  }

  .coming-title{
    font-size: clamp(2rem, 4.5vw, 3.5rem);
    font-weight: 800; margin: 0 0 .4rem;
    text-shadow: 0 6px 24px rgba(0,0,0,.35);
  }
  .coming-subtitle{
    font-size: clamp(1rem, 1.6vw, 1.25rem);
    color: var(--fg-dim); margin: 0 auto 28px; max-width: 760px;
  }

  .cd{
    display:flex; gap:14px; flex-wrap:wrap; justify-content:center; margin: 0 auto 10px;
  }
  .cd__tile{
    min-width:120px; padding:16px 18px; border-radius:18px;
    background:var(--glass-bg); border:1px solid var(--glass-brd);
    backdrop-filter: blur(8px); box-shadow: var(--shadow);
  }
  .cd__num{
    font-weight:900; line-height:1; letter-spacing:.02em;
    font-size: clamp(1.8rem, 3.5vw, 2.6rem);
  }
  .cd__label{
    text-transform:uppercase; letter-spacing:.12em; font-size:.72rem; opacity:.9; margin-top:6px;
  }

  .coming-footer{
    text-align:center; color:#8e9aa7; font-size:.9rem; padding:18px 16px;
    background:#0c0f12; border-top:1px solid rgba(255,255,255,0.06);
  }
</style>

<script>
  // Simple inline countdown (UTC) to Oct 10, 2025
  (function(){
    const el = document.getElementById("countdown");
    if(!el) return;
    const target = new Date("2025-10-10T00:00:00Z");

    function pad(n){ return String(n).padStart(2,"0"); }
    function render(diffMs){
      if(diffMs <= 0){ diffMs = 0; clearInterval(t); }
      const s = Math.floor(diffMs / 1000);
      const days = Math.floor(s / 86400);
      const hours = Math.floor((s % 86400) / 3600);
      const minutes = Math.floor((s % 3600) / 60);
      const seconds = s % 60;

      el.querySelector('[data-key="days"]').textContent = pad(days);
      el.querySelector('[data-key="hours"]').textContent = pad(hours);
      el.querySelector('[data-key="minutes"]').textContent = pad(minutes);
      el.querySelector('[data-key="seconds"]').textContent = pad(seconds);
    }

    function tick(){ render(target - new Date()); }
    const t = setInterval(tick, 1000);
    tick();
  })();
</script>