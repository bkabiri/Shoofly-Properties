<%= render "shared/navbar" %>

<!-- Hero Banner Section -->
<section class="hero-banner d-flex align-items-center justify-content-center text-center text-white"
  style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
         url('<%= asset_path("hero.png") %>') center/cover no-repeat;
         min-height: 70vh;">
  <div class="container">

    <!-- Snoofly Logo -->
    <div class="d-flex justify-content-center align-items-center mb-4" style="margin-top:-40px;">
      <!-- Bigger Heart House SVG -->
      <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="#ff4a5f" class="bi bi-house-heart-fill" viewBox="0 0 16 16">
        <path d="M7.293 1.5a1 1 0 0 1 1.414 0L11 3.793V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v3.293l2.354 2.353a.5.5 0 0 1-.708.707L8 2.207 1.354 8.853a.5.5 0 1 1-.708-.707z"/>
        <path d="m14 9.293-6-6-6 6V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5zm-6-.811c1.664-1.673 5.825 1.254 0 5.018-5.825-3.764-1.664-6.691 0-5.018"/>
      </svg>
      <span class="fw-bold ms-3" style="color:#ff4a5f; font-size:2.5rem;">Snoofly</span>
    </div>

    <!-- Headline & subheading -->
    <h1 class="display-5 fw-bold">
      Your home, your deal — connect with sellers directly
    </h1>
    <p class="lead mt-3">
      Skip the middleman. Buyers meet sellers instantly and close faster.
    </p>

    <!-- Actions -->
    <div class="mt-4 d-flex flex-wrap justify-content-center gap-3">
      <!-- BUY toggles search -->
      <button type="button"
              class="btn btn-light btn-lg px-4 text-dark"
              data-bs-toggle="collapse"
              data-bs-target="#buySearch"
              aria-expanded="false"
              aria-controls="buySearch">
        Buy
      </button>

      <!-- SELL goes to sign in -->
      <%= link_to "Sell",
                  new_user_session_path,
                  class: "btn btn-lg px-4",
                  style: "background:#ff4a5f; color:#fff; border-radius:.6rem;" %>
    </div>

    <!-- Slide-down placeholder search -->
    <div id="buySearch" class="collapse mt-4">
      <div class="row g-2 justify-content-center">
        <div class="col-12 col-md-8">
          <div class="input-group input-group-lg">
            <input type="text"
                   class="form-control"
                   placeholder="Postcode or TOWN (coming soon)">
            <button class="btn btn-outline-light px-4" type="button" disabled>Search</button>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
<!-- Featured Properties Section -->
<section class="featured-properties py-5">
  <div class="container">
    <h2 class="text-center mb-4 fw-bold">Featured Properties</h2>
    <div class="row g-4">
      <% 6.times do |i| %>
        <div class="col-md-4">
          <div class="card h-100 shadow-sm border-0">
            <!-- Image Placeholder -->
            <div class="ratio ratio-16x9">
              <img src="https://via.placeholder.com/600x400?text=Property+<%= i+1 %>" 
                   class="card-img-top rounded-top" alt="Property <%= i+1 %>">
            </div>
            <!-- Card Body -->
            <div class="card-body">
              <h5 class="card-title fw-bold">Property <%= i+1 %></h5>
              <p class="card-text text-muted">
                Short description of property <%= i+1 %>. Replace this with actual details later.
              </p>
              <%= link_to "View Details →", "#", class: "stretched-link fw-semibold text-decoration-none", style: "color:#ff4a5f;" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<!-- Services Section -->
<section class="snoofly-services py-5">
  <div class="container">
    <h2 class="fw-bold text-center mb-4">Services</h2>

    <div class="row g-4">
      <!-- Agent Valuation -->
      <div class="col-12 col-md-6 col-lg-4">
        <a href="#" class="service-card d-block rounded-4 shadow-sm overflow-hidden position-relative">
          <img
            src="<%= asset_path('services/agent-valuation.jpg') rescue 'https://via.placeholder.com/900x600?text=Agent+Valuation' %>"
            alt="Agent Valuation" class="w-100 h-100 object-fit-cover">
          <div class="service-card__overlay">
            <h3 class="service-card__title">Agent Valuation</h3>
          </div>
        </a>
      </div>

      <!-- Freelance Photographers (photos + floor plans) -->
      <div class="col-12 col-md-6 col-lg-4">
        <a href="#" class="service-card d-block rounded-4 shadow-sm overflow-hidden position-relative">
          <img
            src="<%= asset_path('services/photography-floorplans.jpg') rescue 'https://via.placeholder.com/900x600?text=Photography+%2B+Floor+Plans' %>"
            alt="Freelance Photographers & Floor Planning" class="w-100 h-100 object-fit-cover">
          <div class="service-card__overlay">
            <h3 class="service-card__title">Pro Photos & Floor Plans</h3>
          </div>
        </a>
      </div>

      <!-- Instant Valuation -->
      <div class="col-12 col-md-6 col-lg-4">
        <a href="#" class="service-card d-block rounded-4 shadow-sm overflow-hidden position-relative">
          <img
            src="<%= asset_path('services/instant-valuation.jpg') rescue 'https://via.placeholder.com/900x600?text=Instant+Valuation' %>"
            alt="Instant Valuation" class="w-100 h-100 object-fit-cover">
          <div class="service-card__overlay">
            <h3 class="service-card__title">Instant Valuation</h3>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>
<%= render "shared/footer" %>