<%= render "shared/navbar" %>
<section class="container py-5">
  <div class="text-center mb-4">
    <h1 class="fw-bold">Pay as you grow</h1>
    <div class="d-inline-flex align-items-center gap-3 mt-3">
      <span class="text-muted">Bill Monthly</span>
      <div class="form-check form-switch m-0">
        <input class="form-check-input" type="checkbox" id="billingToggle" aria-label="Toggle yearly billing">
      </div>
      <span class="fw-semibold text-danger">Bill Yearly</span>
    </div>
  </div>

  <!-- Tabs: Sellers / Agents -->
  <ul class="nav nav-pills justify-content-center mb-4" id="pricingTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="sellers-tab" data-bs-toggle="pill" data-bs-target="#sellers" type="button" role="tab" aria-controls="sellers" aria-selected="true">
        Private Sellers
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="agents-tab" data-bs-toggle="pill" data-bs-target="#agents" type="button" role="tab" aria-controls="agents" aria-selected="false">
        Estate Agents
      </button>
    </li>
  </ul>

 

  <div class="tab-content" id="pricingTabsContent">
    <!-- Private Sellers -->
    <div class="tab-pane fade show active" id="sellers" role="tabpanel" aria-labelledby="sellers-tab">
      <div class="row g-4">
        <!-- Basic -->
        <div class="col-md-6">
          <div class="card h-100 shadow-sm plan-card" data-plan="sellers-basic">
            <div class="card-body d-flex flex-column text-center">
              <h5 class="fw-bold">Basic</h5>
              <div class="display-5 fw-bold my-2">
                <span class="price" data-monthly="£10" data-yearly="£100">£10</span>
                <span class="fs-6 text-muted period">/mo</span>
              </div>
              <a href="#" class="btn btn-outline-primary mb-3">Try it Free</a>
              <div class="text-start mx-auto" style="max-width: 420px;">
                <ul class="list-unstyled mb-0">
                  <li>1 active property listing</li>
                  <li>Unlimited photos + description</li>
                  <li>Discovery → viewings → offers → sale</li>
                  <li>Calendar for scheduling viewings</li>
                  <li>Access to Solicitors & Photographers partners</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Plus -->
        <div class="col-md-6">
          <div class="card h-100 shadow-sm border-2 border-primary plan-card" data-plan="sellers-plus">
            <div class="card-body d-flex flex-column text-center">
              <h5 class="fw-bold text-primary">Plus</h5>
              <div class="display-5 fw-bold my-2">
                <span class="price" data-monthly="£25" data-yearly="£250">£25</span>
                <span class="fs-6 text-muted period">/mo</span>
              </div>
              <a href="#" class="btn btn-primary mb-3">Choose Plus</a>
              <div class="text-start mx-auto" style="max-width: 420px;">
                <ul class="list-unstyled mb-0">
                  <li>Up to 2 active listings</li>
                  <li>Featured placement in search</li>
                  <li>Priority support</li>
                  <li>All Basic features</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Comparison table -->
      <div class="card mt-5 border-0 shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>Features</th>
                  <th class="text-center">Basic Package</th>
                  <th class="text-center">Plus Package</th>
                </tr>
              </thead>
              <tbody>
                <tr><td>Active Listings</td><td class="text-center">1</td><td class="text-center">Up to 2</td></tr>
                <tr><td>Featured Placement</td><td class="text-center">—</td><td class="text-center">✓</td></tr>
                <tr><td>Priority Support</td><td class="text-center">—</td><td class="text-center">✓</td></tr>
                <tr><td>Scheduling / Calendar</td><td class="text-center">✓</td><td class="text-center">✓</td></tr>
                <tr><td>End-to-end Journey</td><td class="text-center">✓</td><td class="text-center">✓</td></tr>
                <tr><td>Partners (Solicitors/Photographers)</td><td class="text-center">✓</td><td class="text-center">✓</td></tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Estate Agents -->
    <div class="tab-pane fade" id="agents" role="tabpanel" aria-labelledby="agents-tab">
      <div class="row g-4">
        <!-- Starter -->
        <div class="col-md-6">
          <div class="card h-100 shadow-sm plan-card" data-plan="agents-starter">
            <div class="card-body d-flex flex-column text-center">
              <h5 class="fw-bold">Starter (20 Active)</h5>
              <div class="display-5 fw-bold my-2">
                <span class="price" data-monthly="£49" data-yearly="£490">£49</span>
                <span class="fs-6 text-muted period">/mo</span>
              </div>
              <a href="#" class="btn btn-outline-primary mb-3">Choose Starter</a>
              <div class="text-start mx-auto" style="max-width: 420px;">
                <ul class="list-unstyled mb-0">
                  <li>Up to 20 active listings</li>
                  <li>3 team seats with roles/permissions</li>
                  <li>Agency branding on listings</li>
                  <li>Bulk CSV uploads + image uploader</li>
                  <li>Viewing scheduler & lead inbox</li>
                  <li>Basic analytics & exports</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- Unlimited -->
        <div class="col-md-6">
          <div class="card h-100 shadow-sm border-2 border-primary plan-card" data-plan="agents-unlimited">
            <div class="card-body d-flex flex-column text-center">
              <h5 class="fw-bold text-primary">Unlimited</h5>
              <div class="display-5 fw-bold my-2">
                <span class="price" data-monthly="£79" data-yearly="£790">£79</span>
                <span class="fs-6 text-muted period">/mo</span>
              </div>
              <a href="#" class="btn btn-primary mb-3">Choose Unlimited</a>
              <div class="text-start mx-auto" style="max-width: 420px;">
                <ul class="list-unstyled mb-0">
                  <li>Unlimited active listings</li>
                  <li>10 team seats + branch management</li>
                  <li>Featured slots each month</li>
                  <li>Advanced analytics & funnels</li>
                  <li>Priority support</li>
                  <li>API/Webhooks & CRM export</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Comparison table -->
      <div class="card mt-5 border-0 shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>Features</th>
                  <th class="text-center">Starter (20)</th>
                  <th class="text-center">Unlimited</th>
                </tr>
              </thead>
              <tbody>
                <tr><td>Active Listings</td><td class="text-center">Up to 20</td><td class="text-center">Unlimited</td></tr>
                <tr><td>Team Seats</td><td class="text-center">3</td><td class="text-center">10 + branches</td></tr>
                <tr><td>Featured Slots</td><td class="text-center">—</td><td class="text-center">✓</td></tr>
                <tr><td>Analytics</td><td class="text-center">Basic</td><td class="text-center">Advanced</td></tr>
                <tr><td>Support</td><td class="text-center">Standard</td><td class="text-center">Priority</td></tr>
                <tr><td>Integrations</td><td class="text-center">CSV upload</td><td class="text-center">API/Webhooks + CRM</td></tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render "shared/footer" %>