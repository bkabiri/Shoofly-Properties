<%= render "shared/navbar" %>
<section class="pricing-section"
         data-controller="checkout"
         data-checkout-listing-id-value="<%= @listing&.id %>">
  <!-- Hero -->
  <div class="pricing-hero">
    <h1 class="pricing-title">Simple, Transparent Pricing</h1>
    <p class="pricing-subtitle">Choose the perfect plan for your property journey. No hidden fees, no surprises.</p>

    <!-- Billing toggle (affects recurring plans only) -->
    <div id="billingToggle" class="billing-toggle" role="tablist" aria-label="Billing period">
      <button type="button" class="billing-option active" data-period="monthly" aria-pressed="true">Monthly</button>
      <button type="button" class="billing-option" data-period="yearly" aria-pressed="false">Yearly (Save 20%)</button>
    </div>
  </div>

  <div class="container">
    <!-- Tabs -->
    <div class="pricing-tabs d-flex" id="pricingTabs" role="tablist" aria-label="Audience">
      <button class="pricing-tab active flex-grow-1" type="button" data-bs-target="#sellers" aria-controls="sellers" aria-selected="true">Private Sellers</button>
      <button class="pricing-tab flex-grow-1" type="button" data-bs-target="#agents" aria-controls="agents" aria-selected="false">Estate Agents</button>
    </div>

    <div class="tab-content">
      <!-- ===================== Private Sellers ===================== -->
      <div class="tab-pane fade show active" id="sellers" role="tabpanel">
        <div class="row g-4">
          <!-- Starter (one-time, 3 months) -->
          <div class="col-lg-6">
            <div class="plan-card shadow-lg" data-plan-card>
              <div class="plan-header">
                <h3 class="plan-name">Starter (3 Months)</h3>
                <div class="plan-price"
                     data-fixed="true"
                     data-monthly="£10"
                     data-yearly="£10">£10</div>
                <div class="plan-period" data-fixed="true">one-time for 3 months</div>
              </div>

              <div class="plan-features">
                <div class="feature-item"><i class="bi bi-check-circle-fill feature-icon"></i> Full access to Snoofly for 3 months</div>
                <div class="feature-item"><i class="bi bi-check-circle-fill feature-icon"></i> 1 active property listing</div>
                <div class="feature-item"><i class="bi bi-check-circle-fill feature-icon"></i> Unlimited photos & detailed description</div>
                <div class="feature-item"><i class="bi bi-check-circle-fill feature-icon"></i> Viewing scheduling calendar</div>
                <div class="feature-item"><i class="bi bi-check-circle-fill feature-icon"></i> Support + partner services access</div>

                <button
                  class="btn-snoofly-outline"
                  data-select-plan
                  data-action="click->checkout#preview"
                  data-checkout-plan="priv_starter_once"
                  data-checkout-kind="one_time"
                  data-checkout-period="one_time">
                  Start for £10
                </button>
              </div>
            </div>
          </div>

          <!-- Plus (ONE-OFF) -->
          <div class="col-lg-6">
            <div class="plan-card shadow-lg selected" data-plan-card>
              <div class="plan-ribbon">MOST POPULAR</div>
              <div class="plan-header">
                <h3 class="plan-name">Plus</h3>
                <div class="plan-price"
                     data-fixed="true"
                     data-monthly="£25"
                     data-yearly="£25">£25</div>
                <div class="plan-period" data-fixed="true">one-time payment</div>
              </div>

              <div class="plan-features">
                <div class="feature-item"><i class="bi bi-check-circle-fill feature-icon"></i> Full access, up to 2 active listings</div>
                <div class="feature-item"><i class="bi bi-stars feature-icon"></i> <strong>Premium placement for 2 weeks</strong></div>
                <div class="feature-item"><i class="bi bi-bell-fill feature-icon"></i> <strong>Investors notified</strong> about your listing</div>
                <div class="feature-item"><i class="bi bi-check-circle-fill feature-icon"></i> Priority support</div>
                <div class="feature-item"><i class="bi bi-graph-up feature-icon"></i> Basic analytics dashboard</div>

                <button
                  class="btn-snoofly-price"
                  data-select-plan
                  data-action="click->checkout#preview"
                  data-checkout-plan="priv_plus_once"
                  data-checkout-kind="one_time"
                  data-checkout-period="one_time">
                  Choose Plus
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- (Your comparison table stays the same) -->
      </div>

      <!-- ===================== Estate Agents ===================== -->
      <div class="tab-pane fade" id="agents" role="tabpanel">
        <div class="row g-4">
          <!-- Basic -->
          <div class="col-lg-6">
            <div class="plan-card shadow-lg" data-plan-card>
              <div class="plan-header">
                <h3 class="plan-name">Basic (20 Active)</h3>
                <div class="plan-price" data-monthly="£29" data-yearly="£23">£29</div>
                <div class="plan-period">per month</div>
                <div class="plan-savings yearly-only" style="display:none;">Save £72 yearly</div>
              </div>

              <div class="plan-features">
                <div class="feature-item"><i class="bi bi-check-circle-fill feature-icon"></i> <strong>Up to 20 active properties</strong></div>
                <div class="feature-item"><i class="bi bi-people feature-icon"></i> 3 team seats with permissions</div>
                <div class="feature-item"><i class="bi bi-building feature-icon"></i> Agency branding on listings</div>
                <div class="feature-item"><i class="bi bi-file-earmark-spreadsheet feature-icon"></i> Bulk CSV uploads</div>
                <div class="feature-item"><i class="bi bi-calendar-check feature-icon"></i> Viewing scheduler & lead inbox</div>

                <button
                  class="btn-snoofly-outline"
                  data-select-plan
                  data-action="click->checkout#preview"
                  data-checkout-plan="agent_basic_month"
                  data-checkout-kind="subscription"
                  data-checkout-period="monthly">
                  Choose Basic
                </button>
              </div>
            </div>
          </div>

          <!-- Unlimited -->
          <div class="col-lg-6">
            <div class="plan-card shadow-lg selected" data-plan-card>
              <div class="plan-ribbon">MOST POPULAR</div>
              <div class="plan-header">
                <h3 class="plan-name">Unlimited</h3>
                <div class="plan-price" data-monthly="£49" data-yearly="£39">£49</div>
                <div class="plan-period">per month</div>
                <div class="plan-savings yearly-only" style="display:none;">Save £120 yearly</div>
              </div>

              <div class="plan-features">
                <div class="feature-item"><i class="bi bi-check-circle-fill feature-icon"></i> <strong>Unlimited properties</strong></div>
                <div class="feature-item"><i class="bi bi-stars feature-icon"></i> <strong>Each new listing is Premium for 1 week</strong></div>
                <div class="feature-item"><i class="bi bi-bell-fill feature-icon"></i> <strong>Investors notified for every new listing</strong></div>
                <div class="feature-item"><i class="bi bi-people feature-icon"></i> 10 team seats + branch management</div>
                <div class="feature-item"><i class="bi bi-graph-up feature-icon"></i> Advanced analytics & funnels</div>

                <button
                  class="btn-snoofly"
                  data-select-plan
                  data-action="click->checkout#preview"
                  data-checkout-plan="agent_unlimited_month"
                  data-checkout-kind="subscription"
                  data-checkout-period="monthly">
                  Choose Unlimited
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- (Your agents comparison table stays the same) -->
      </div>
    </div>
  </div>
</section>

<%= render "shared/footer" %>

<!-- PLAN PREVIEW MODAL -->
<div class="modal fade snoofly-modal" id="planPreviewModal" tabindex="-1" aria-hidden="true" data-checkout-target="modal">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header d-flex align-items-center justify-content-between">
        <div>
          <div class="plan-chip" id="previewPlanPrice">£—</div>
          <h5 class="modal-title mt-2" id="previewPlanName">Plan name</h5>
          <div class="small" id="previewPlanPeriod">per month</div>
        </div>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="previewPlanFeatures">
          <!-- features injected here -->
        </div>
      </div>
      <div class="modal-footer gap-2">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger px-4" data-checkout-confirm>
          Continue to Checkout
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  // UI sugar only (no Stripe here): toggle monthly/yearly, tabs, and selected card border
  document.addEventListener('DOMContentLoaded', () => {
    // Billing toggle
    const toggleBtns = document.querySelectorAll('#billingToggle .billing-option');
    const prices  = document.querySelectorAll('.plan-price');
    const periods = document.querySelectorAll('.plan-period');
    const savings = document.querySelectorAll('.plan-savings');

    const setRecurringButtonsPeriod = (period) => {
      document.querySelectorAll('button[data-checkout-kind="subscription"]').forEach(btn => {
        btn.dataset.checkoutPeriod = period; // "monthly" | "yearly"
      });
    };

    toggleBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const period = btn.dataset.period;
        toggleBtns.forEach(b => { b.classList.remove('active'); b.setAttribute('aria-pressed','false'); });
        btn.classList.add('active'); btn.setAttribute('aria-pressed','true');

        prices.forEach(el => {
          if (el.dataset.fixed === 'true') return;
          el.textContent = (period === 'monthly') ? el.dataset.monthly : el.dataset.yearly;
        });
        periods.forEach(el => {
          if (el.dataset.fixed === 'true') return;
          el.textContent = (period === 'monthly') ? 'per month' : 'per year';
        });
        savings.forEach(el => el.style.display = (period === 'yearly') ? 'block' : 'none');

        setRecurringButtonsPeriod(period);
      });
    });

    // Tabs
    const tabs = document.querySelectorAll('.pricing-tab');
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const target = tab.getAttribute('data-bs-target');
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        document.querySelectorAll('.tab-pane').forEach(p => p.classList.remove('show','active'));
        document.querySelector(target).classList.add('show','active');
      });
    });

    // Selected card border (when the choose button is clicked)
    document.querySelectorAll('[data-select-plan]').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('[data-plan-card]').forEach(c => c.classList.remove('selected'));
        btn.closest('[data-plan-card]')?.classList.add('selected');
      });
    });

    setRecurringButtonsPeriod('monthly');
  });
</script>